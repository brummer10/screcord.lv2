@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix state:   <http://lv2plug.in/ns/ext/state#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix guiext: <http://lv2plug.in/ns/extensions/ui#>.

<https://github.com/brummer10/screcord#mono_record>
    a lv2:Plugin ,
        lv2:UtilityPlugin ;
    doap:maintainer [
		foaf:name "brummer";
		foaf:homepage <https://github.com/brummer10/screcord.lv2>;
	] ;
    doap:name "Record-Mono";
    doap:license <http://opensource.org/licenses/isc> ;
    lv2:project <https://github.com/brummer10/screcord.lv2> ;
    lv2:optionalFeature lv2:hardRTCapable ;
    lv2:extensionData state:interface ;

    lv2:minorVersion 1;
    lv2:microVersion 1;

rdfs:comment """
Mono Recorder plugin, save audio stream as wav or ogg files.

Features:
Developed by Brummer

""";

    lv2:port [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "FORMAT" ;
        lv2:name "FORMAT";
        lv2:default 0;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:portProperty lv2:integer;
        lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label ".wav"; rdf:value 0];
        lv2:scalePoint [rdfs:label ".ogg"; rdf:value 1];
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "REC" ;
        lv2:name "REC";
        lv2:portProperty lv2:toggled;
        lv2:portProperty lv2:integer;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        rdfs:comment "recorded files goes to /data/user-files/Audio Recordings/lv2record/" ,
        "Aufnahmen gehen nach /data/user-files/Audio Recordings/lv2record/ "@de ,
        "Les fichiers sont enregistrés dans /data/user-files/Audio Recordings/lv2record/ "@fr;
    ] , [
        a lv2:OutputPort ,
            lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "CLIP" ;
        lv2:name "CLIP";
        lv2:portProperty lv2:toggled;
        lv2:portProperty lv2:integer;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
    ] , [
        a lv2:OutputPort ,
            lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "LMETER" ;
        lv2:name "VUMETER" ;
        lv2:default -70.0 ;
        lv2:minimum -70.0 ;
        lv2:maximum 4.0 ;
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 4 ;
        lv2:symbol "out" ;
        lv2:name "Out"
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 5 ;
        lv2:symbol "in" ;
        lv2:name "In" ;
    ] .

